{
  "$schema": "https://opencode.ai/config.json",
  "model": "{env:OPENCODE_MODEL}",
  "small_model": "{env:OPENCODE_SMALL_MODEL}",
  "agent": {
    "code-reviewer": {
      "description": "Reviews code for best practices and potential issues",
      "model": "{env:OPENCODE_MODEL}",
      "prompt": "You are a code reviewer. Focus on security, performance, and maintainability.",
      "tools": {
        "write": false,
        "edit": false
      }
    },
    "readonly": {
      "model": "{env:OPENCODE_MODEL}",
      "mode": "primary",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "read": true,
        "grep": true,
        "glob": true
      }
    }
  },
  "lsp": {
    "dart": {
      "disabled": false,
      "command": [
        "fvm",
        "dart",
        "language-server",
        "--protocol=lsp"
      ],
      "extensions": [
        ".dart"
      ],
      "initialization": {
        "onlyAnalyzeProjectsWithOpenFiles": false,
        "suggestFromUnimportedLibraries": true,
        "closingLabels": true,
        "outline": true,
        "flutterOutline": true
      }
    }
  },
  "formatter": {
    "dart-fix": {
      "command": [
        "fvm",
        "dart",
        "fix",
        "--apply",
        "$FILE"
      ],
      "extensions": [
        ".dart"
      ]
    },
    "dart-import-sorter": {
      "command": [
        "fvm",
        "dart",
        "pub",
        "run",
        "import_sorter:main",
        "$FILE"
      ],
      "extensions": [
        ".dart"
      ]
    },
    "dart-format": {
      "command": [
        "fvm",
        "dart",
        "format",
        "$FILE"
      ]
    }
  },
  "mcp": {
    "firecrawl-mcp": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "firecrawl-mcp"
      ],
      "enabled": true,
      "environment": {
        "FIRECRAWL_API_KEY": "{env:FIRECRAWL_API_KEY}"
      }
    }
  }
}